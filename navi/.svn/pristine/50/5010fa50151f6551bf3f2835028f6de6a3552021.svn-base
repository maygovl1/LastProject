<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring"%>

<div class="chat_top point_bg">
	<form id="searchForm">
		<input type="hidden" name="Search"
			value="${paging.detailCondition.Search }" />
	</form>
	<!-- searchBar -->
	<div data-pg-role="searchUI" data-pg-target="#searchForm" class="searchBox d-flex justify-content-end">
		<div class="fieldset flex">
			<input class="me-1" type="text" name="Search" data-pg-init-value="${paging.detailCondition.Search }" placeholder="이름 또는 부서 또는 직급" />
			<button type="button" class="btn btn-primary" data-pg-role="searchBtn">검색</button>
		</div>
	</div>
</div>
<div class="chat_middle">
	<table class="table text-center" style="max-height: 500px;">
		<caption class="sr-only">Emp List</caption>

		<colgroup>
			<col style="width: 5%;">
			<col style="width: auto;">
			<col style="width: 10%;">
		</colgroup>

		<thead>
			<tr>
				<th scope="col">플필</th>
				<th scope="col">selectOne</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			<c:forEach items="${list }" var="list">
				<tr>
					<td rowspan="2"><div class="profil_img block"
							style="height: 50px; width: 50px;">
							<div class="img-in">
								<img src="${pageContext.request.contextPath}/resources/images/prog/navi.jpg" alt="프로필이미지">
							</div>
						</div></td>
					<td class="text-start">${list.empName }${list.psName }(${list.deptName })</td>
					<td>📌</td>
				</tr>
				<tr>
					<td colspan="2" class="text-start">할말이있을까</td>
				</tr>
			</c:forEach>
		</tbody>
	</table>
</div>

<script src="<c:url value='/resources/js/common/paging.js'/>"></script>