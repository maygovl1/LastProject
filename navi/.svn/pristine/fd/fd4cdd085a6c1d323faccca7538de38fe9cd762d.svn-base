<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.navi.board.qna.dao.QnaDAO">
	<sql id="searchFrag">
		<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(simpleCondition.searchWord)">
			AND
			<choose>
				<when test="simpleCondition.searchType eq 'title'">
					INSTR(BP_TITLE, #{simpleCondition.searchWord}) > 0
				</when>
				<when test="simpleCondition.searchType eq 'name'">
					INSTR(EMP.EMP_NAME, #{simpleCondition.searchWord}) > 0
				</when>
				<otherwise>
					INSTR(BP_TITLE, #{simpleCondition.searchWord}) > 0
					OR
					INSTR(EMP.EMP_NAME, #{simpleCondition.searchWord}) > 0
				</otherwise>
			</choose>
		</if>
	</sql>

<select id="selectQnaList" resultType="BoardPostVO" parameterType="PaginationInfo">
	SELECT B.* FROM(
		SELECT ROWNUM RNUM, A.* FROM (
			SELECT
			    bp_id
			  , emp.emp_name
			  , bp_title
			  , bp_reg_dt
              , QNA_STATE.qna_name
			  , bp_cnt
			FROM
			    board_post
			
			JOIN
				EMP ON(board_post.emp_id = emp.emp_id)
			JOIN
            	QNA_STATE ON(board_post.bp_qna_YN = qna_state.bp_qna_YN)
           	WHERE
				BRD_ID = 'BN0005'
			AND 
				bp_del_dt IS NULL
				<include refid="searchFrag" />
			ORDER BY 
				BP_REG_DT DESC
			) A
		) B
		<where>
			<if test="startRow gt 0 and endRow gt 0">
				<![CDATA[
					RNUM >= #{startRow} AND RNUM <= #{endRow}
				]]>
			</if>
		</where>
</select>

<select id="totalRecord" parameterType="PaginationInfo">
		select COUNT(*)FROM
			(SELECT
			     bp_id
			  , emp.emp_name
			  , bp_title
			  , bp_reg_dt
              , qna_state.qna_name
			  , bp_cnt
			FROM
			    board_post
			JOIN
				EMP ON(board_post.emp_id = emp.emp_id)
			JOIN
           	 	QNA_STATE ON(board_post.bp_qna_YN = qna_state.bp_qna_YN)
            WHERE
				BRD_ID = 'BN0005'
			AND 
				bp_del_dt IS NULL
				<include refid="searchFrag" />
			ORDER BY 
				BP_REG_DT DESC
		) A
</select>

<select id="selectQna" resultMap="qnaMap">
		SELECT
            bp_id
            , bp_title
            , EMP.emp_name
            , bp_reg_dt
            , bp_mod_id
            , bp_mod_dt
            , bp_cn
            , bp_cnt
            , bp_qna_as
            , QNA_STATE.bp_qna_YN
            , QNA_STATE.qna_name
        FROM
             board_post
        JOIN
            EMP ON(board_post.emp_id = emp.emp_id)
        JOIN
            QNA_STATE ON(board_post.bp_qna_YN = qna_state.bp_qna_YN)
        WHERE BRD_ID = 'BN0005'
		AND BP_ID = #{bpId}
</select>
<resultMap type="BoardPostVO" id="qnaMap" autoMapping="true">
	<id column="BP_ID" property="bpId"/>
	<result column="BP_CN" property="bpCn" jdbcType="CLOB"/>
	<result column="BP_QNA_AS" property="bpQnaAs" jdbcType="CLOB"/>
</resultMap>
<update id="updateQna" parameterType="BoardPostVO">
		UPDATE
		    BOARD_POST
		SET
		    BP_TITLE = #{vo.bpTitle}
		    , BP_MOD_ID = #{vo.bpModId}
		    , BP_MOD_DT = SYSTIMESTAMP
		    , BP_CN = #{vo.bpCn}
		WHERE
		    BOARD_POST.BRD_ID = 'BN0005'
		AND 
			BOARD_POST.BP_ID = #{vo.bpId}
</update>

<delete id="deleteQna">
		UPDATE board_post
		SET
		    bp_del_dt = SYSTIMESTAMP
		WHERE
		    bp_id = #{bpId}
</delete>

<insert id="insertQna" parameterType="BoardPostVO">
<selectKey order="BEFORE" resultType="String" keyProperty="bpId">
			select 
		    	'B'||LPAD(NVL(TO_NUMBER(SUBSTR(MAX(BP_ID),5)),0)+1,5,'0') 
		    FROM BOARD_POST
</selectKey>

		INSERT INTO board_post (
				    bp_id
				    , emp_id
				    , bp_mod_id
				    , brd_id
				    , bp_title
				    , bp_cn
				    , bp_reg_dt
				    , bp_del_dt
				    , bp_op_yn
				    , bp_cnt
				    , bp_mod_dt
				    , bp_shr_yn
				    , bp_ntc_id
				    , bp_qna_as
				    , bp_qna_yn
				) VALUES (
				    #{bpId}
				  , #{empId}
				  , NULL
				  , 'BN0005'
				  , #{bpTitle}
				  , #{bpCn,jdbcType=CLOB}
				  , SYSTIMESTAMP
				  , NULL
				  , NULL
				  , 0
				  , NULL
				  , NULL
				  , 'BN0005'
				  , NULL
				  , 'N'
				)
</insert>
</mapper>