<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.navi.projectdetail.gantt.dao.TaskGanttDAO">
	<select id="selectTaskList" resultMap="taskMap">
		SELECT
    task_id
  , ts_id
  , pro_id
  , task_man_id
  , task_top_id
  , tps_id
  , task_reg_id
  , task_title
  , task_reg_dt
  , task_ddline_dt
  , task_mod_dt
  , task_cn
  , task_rqrd
  , task_est_time
  , task_comp_dt
  , task_del_dt
  , emp.emp_name as task_man_name
FROM
    task join emp on(task.task_man_id=emp.emp_id)
		where pro_id=#{proId}
	</select>
	<resultMap type="TaskVO" id="taskMap" autoMapping="true">
		<result property="taskCn" column="TASK_CN" jdbcType="CLOB" javaType="java.lang.String"/>
	</resultMap>
</mapper>