@Controller
@RequestMapping("/board/photo/photoUpdate.do")
public class PhotoUpdateController {

	@Inject
	private PhotoService service;
	
	public static final String MODELNAME = "updatePhoto";
	
	@GetMapping("{bpId}")
	public String updateForm(@RequestParam String what, Model model) {
		BoardPostVO photo = service.retrievePhoto(what);
		model.addAttribute(MODELNAME, photo);
		return "board/photo_mod";
	}
