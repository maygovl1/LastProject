                                        <col style="width: 8%;">
                                        <col style="width: 5%;">
                                        <col style="width: auto;">
                                        <col style="width: 8%;">
                                        <col style="width: 8%;">
                                        <col style="width: 8%;">
                                        <col style="width: 10%;">
                                    </colgroup>
            
                                    <thead>
                                        <tr>
