	                                            <th><input type="checkbox" class="checkbox"></th>
	                                            <td class="rnum"></td>
	                                            <td class="taskId"></td>
	                                         	<td class="tsId">
	                                         		<span class="category ordinary"></span>
												</td>
											
	                                          <td class="text-start taskTitle">
		                                           <a href="<c:url value='/project/task/${taskList.proId }/${taskList.taskId }'/>"> 
			                                           <em class="text-elipsis">
				                                          	<span class="fw-bold">[${taskList.projectVO.proName}]</span>
				                                           	&nbsp;${taskList.taskTitle }
														</em>
													</a>
												</td>
											 	 <td class="empName">${taskList.empVO.empName }</td> 
												 <td class="tpsName">${taskList.taskProcessStatus.tpsName }</td>
												 <td class="tpsIng">${taskList.taskProcessStatus.tpsIng }</td>
												 <td class="taskRegDtStr">${taskList.taskRegDtStr }</td> 
	                                        </tr>
                                 
                                    </tbody>
            
                                </table>
	            				
	            				<!-- pagination   -->
	            				<ul class="pagination"></ul>
	            				<!-- pagination   -->
	                             
                            </div>
                            <!-- table -->
                        </div>
                        <div class="modal-footer justify-content-center">
                            <button type="button" class="btn btn-light btn-outline-secondary" data-bs-dismiss="modal">닫기</button>
                            <button type="submit" class="btn btn-primary" id="addTaskBtn">추가</button>
                        </div>
                    </div>
                </div>
