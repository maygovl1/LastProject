                        </div>
                        <div class="modal-body">
                            <!-- search -->
                            <form id="searchForm" action="" method="POST" enctype="application/x-www-form-urlencoded">
                         <%--  <form id="searchForm" action="" method="GET"> --%>
								<input type="text" name="page" /> 
								<input type="text" name="ts" value="${paging.detailCondition.ts }" /> 
								<input type="text" name="tps" value="${paging.detailCondition.tps }" /> 
								<input type="text" name="word" value="${paging.detailCondition.word }" />
								<input type="text" name="" value="" />
							</form>
                       	   
                       	 	<%--체크박스 클릭 시 데이터 전송 폼 --%>
                              <c:if test="${not empty taskList }">
                             		<form id="checkboxForm" action="" method="POST" enctype="application/x-www-form-urlencoded">
