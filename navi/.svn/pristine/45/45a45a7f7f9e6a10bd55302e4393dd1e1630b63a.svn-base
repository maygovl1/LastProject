 <select id="selectTeams" resultMap="teamMap">
	 SELECT
	    pro_id
	  , team.emp_id
	  , team.role_id
	  , team_yn
	  , emp.dept_id
	  , dept_name
	  , position.ps_id
	  , position.ps_name
	  , cn_id
	  , emp_img
	  , emp_name
	  , emp_age
	  , emp_gen
	  , emp_pass
	  , emp_rrno
	  , emp_phone
	  , emp_tel
	  , emp_zip
	  , emp_addr
	  , emp_mail
	  , emp_cmp_ymd
	  , emp_career
	  , emp_quit_dt
	  , emp_limit_yn
	  , emp_cert_cg
	  , emp_fm_id
	  , emp_bk_id
	  , emp_addr2
	FROM
	    team join emp on(team.emp_id=emp.emp_id)
	    join dept on(emp.dept_id=dept.dept_id)
	    join position on(emp.ps_id=position.ps_Id)
	WHERE PRO_ID= #{proId} and
	team.role_id != 'ROLE_PL'
	<include refid="searchFrag" />
 </select>
 <select id="selectTotalRecord">
	 select count(*) from
	(
	SELECT
	    pro_id
	  , team.emp_id
	  , team.role_id
	  , team_yn
	  , emp.dept_id
	  , dept_name
	  , position.ps_id
	  , position.ps_name
	  , cn_id
	  , emp_img
	  , emp_name
	  , emp_age
	  , emp_gen
	  , emp_pass
	  , emp_rrno
	  , emp_phone
	  , emp_tel
	  , emp_zip
	  , emp_addr
	  , emp_mail
	  , emp_cmp_ymd
	  , emp_career
	  , emp_quit_dt
	  , emp_limit_yn
	  , emp_cert_cg
	  , emp_fm_id
	  , emp_bk_id
	  , emp_addr2
	FROM
	    team join emp on(team.emp_id=emp.emp_id)
	    join dept on(emp.dept_id=dept.dept_id)
	    join position on(emp.ps_id=position.ps_Id)
	WHERE PRO_ID= #{proId} and
	team.role_id != 'ROLE_PL'
	<include refid="searchFrag" />)
 </select>
 
 <update id="updateTeamYN">
    UPDATE team
	SET
	    team_yn = #{yn}
	WHERE
	        pro_id = #{proId}
	    AND emp_id = #{empId}
 </update>
 
 <select id="selectTeamYN" >
    SELECT
	team_yn
	FROM
	    team
	WHERE
	pro_id= #{proId}
	and
	emp_id= #{empId}
 </select>
</mapper>