package kr.or.navi.board.form.controller;

import javax.inject.Inject;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.Errors;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;

import kr.or.navi.board.form.service.FormService;
import kr.or.navi.vo.BoardPostVO;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@Controller
@RequestMapping("/board/form")
public class FormUpdateController {

	@Inject
	private FormService service;
	
	@GetMapping("modify/{bpId}")
	public String formModify(@PathVariable(name="bpId") String bpId, Model model) {
		BoardPostVO form = service.retrieveForm(bpId);
		model.addAttribute("fm", form);
		return "form/form_mod";
	}

	@PutMapping
	public String formModifyController(@RequestBody BoardPostVO formMod, Errors error, Model model) {
		log.info("formMod : {}",formMod);
		log.info("error : {}",error);
		int cnt = service.formModify(formMod);
		if(cnt>0) {
			model.addAttribute("msg","ok");	
		}else {
			model.addAttribute("msg","fail");
		}
		return "jsonView";
	}
}
