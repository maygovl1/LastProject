<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring"%>
<link rel="stylesheet" href='<c:url value="/resources/css/project/dashboard.css"/>'>
<!-- dashboard-->
<div class="box dashboard clearfix">
		<!-- chart -->
		<div class="box_inner chart_box">
		
			<div class="p-2 right">
				<strong class="h5 GmarketSans">프로젝트상태 현황</strong>
				<canvas id="ingChart"></canvas>
			</div>
		
		
			<div class="p-2 left">
				<strong class="h5 GmarketSans">일감상태 현황</strong>
				<canvas id="taskChart"></canvas>
			</div>
			
			<div class="p-2 middle">
				<strong class="h5 GmarketSans">역할분배 현황</strong>
				<canvas id="roleChart"></canvas>
			</div>
			
		
		</div>
		<!-- chart -->
		<!-- table -->
		
		<div class="box_inner table_box">

			<strong class="h4 GmarketSans bold">최신 이슈테이블</strong>
			<table class="table text-center">
				<caption class="sr-only">이슈 테이블</caption>

				<colgroup>
					<col style="width: 5%;">
					<col style="width: 8%;">
					<col style="width: 8%;">
					<col style="width: 5%;">
					<col style="width: 5%;">
					<col style="width: auto;">
					<col style="width: 8%;">
					<col style="width: 8%;">
					<col style="width: 8%;">

				</colgroup>

				<thead>
					<tr>
						<th scope="col">즐겨찾기</th>
						<th scope="col">번호</th>
						<th scope="col">이슈ID</th>
						<th scope="col">분류</th>
						<th scope="col">상태</th>
						<th scope="col">이슈명</th>
						<th scope="col">작성자</th>
						<th scope="col">첨부파일</th>
						<th scope="col">등록일</th>
						<!-- <th scope="col">중요도</th> -->
					</tr>
				</thead>
				<tbody>
					<c:forEach items="${issueList }" var="issue" begin="0" end="2">
						<!-- 1 -->
						<tr>
							<td class="text-center">
								<%-- 기본 즐겨찾기 안 한 경우
								<button class="kinBtn border-0"
									data-mark-id="${issue.issueId }">
									<i class="icon kin"></i><i class="sr-only">즐겨찾기버튼</i>
								</button> 
								--%>
								<%-- 즐겨찾기 active 한 경우 --%>
								<button class="kinBtn border-0 active"
									data-mark-id="${issue.issueId }">
									<i class="icon kin"></i><i class="sr-only">즐겨찾기버튼</i>
								</button>
							</td>
							<th scope="row">${issue.rnum }</th>
							<td>${issue.issueId }</td>
							<%--
								<span class="category ordinary">안정</span>	
								<span class="category emergency">긴급</span>
								<span class="category project">신규</span>
							--%>
							
							
							<td><span class="category ordinary">${issue.impName}</span></td>
							<td><span class="category ordinary">${issue.stateName}</span></td>
							<td class="text-start">
							<a
									href="${pageContext.request.contextPath }/project/issue/detail/${proId }/${issue.issueId}"
									class="text-link d-flex new"> <span class="icon new_icon">
										<span class="sr-only">new</span>
									</span> <em class="text-elipsis">${issue.issueTitle}</em>
								</a>
							</td>
							<td>${issue.empName }</td>
							<td>
							<a href="" class="download_link" download=""><i
										class="icon hangle"></i><em class="sr-only">한글파일 다운로드</em></a>
							</td>
							<td>${issue.issueRegDtStr}</td>
						</tr>
						<!-- 1 -->
					</c:forEach>
				</tbody>
			</table>

		</div>
		
		<!-- table -->
	
	</div>

<!-- dashboard-->


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const taskChart   = document.getElementById('taskChart');
  const roleChart   = document.getElementById('roleChart');
  const ingChart   = document.getElementById('ingChart');
  
  
  new Chart(ingChart, {
	  	type: 'doughnut',
	    data: {
	    	 labels: ${chart.labels },
	    		  datasets: [{
	    			    label: '프로젝트상태 현황',
	    			    data: [65, 59, 80],
	    			    backgroundColor: [
	  	    		      'rgb(255, 99, 132)',
	  	    		      'rgb(54, 162, 235)',
	  	    		      'rgb(255, 205, 86)'
	  	    		    ],
	  	    		  hoverOffset: 4
	    			  }]
	    },
	    options: {
		      scales: {
		        y: {
		          beginAtZero: true
		        }
		      },
		      cutout:"50%"
		      ,radius:"80%"
		   
		    }
	   
	  });  
  new Chart(taskChart, {
	  	type: 'doughnut',
	    data: {
	    	 labels: ${chart.labels },
	    		  datasets: [{
	    		    label: 'My First Dataset',
	    		    data: ${chart.data },
	    		    backgroundColor: [
	    		      'rgb(255, 99, 132)',
	    		      'rgb(54, 162, 235)',
	    		      'rgb(255, 205, 86)'
	    		    ],
	    		    hoverOffset: 4
	    		  }]
	    },
	    options: {
	      scales: {
	        y: {
	          beginAtZero: true
	        }
	      },
	      cutout:"50%"
	      ,radius:"80%"
	   
	    }
	  });
  new Chart(roleChart, {
	    type: 'doughnut',
	    data: {
	        labels: ${team.labels},
	        datasets: [{
	            label: 'My First Dataset',
	            data: ${team.data},
	            backgroundColor: [
	                'rgb(255, 99, 132)',
	                'rgb(54, 162, 235)',
	                'rgb(255, 205, 86)',
	                'rgb(75, 192, 192)',
	                'rgb(153, 102, 255)'
	                // 여기에 더 많은 색상을 추가할 수 있습니다.
	            ],
	            hoverOffset: 4
	        }]
	    },
	    options: {
	        scales: {
	            y: {
	                beginAtZero: true
	            }
	        },
	        cutout: "50%",
	        radius: "80%"
	    }
	});
</script>