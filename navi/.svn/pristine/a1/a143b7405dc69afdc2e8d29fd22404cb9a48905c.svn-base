package kr.or.navi.todaylist.service;

import java.util.List;

import javax.inject.Inject;

import org.springframework.stereotype.Service;

import kr.or.navi.common.paging.PaginationInfo;
import kr.or.navi.todaylist.dao.TodayListDAO;
import kr.or.navi.vo.TodayListVO;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@Service
public class TodayListServiceImple implements TodayListService{

	//dao inject
	@Inject
	TodayListDAO dao;
	
	@Override
	public List<TodayListVO> taskList(PaginationInfo paing) {
		int totalRecord = dao.selectTotalRecord(paing);
		// 컨트롤러로부터 받아오는 정보를 셋팅해서, paginationInfo 에게 넘겨주기
		paing.setTotalRecord(totalRecord);
		
		log.info("totalRecord :{}",totalRecord);
		log.info("dao.selectTaskList(paing) :{}",dao.selectTaskList(paing));
		return dao.selectTaskList(paing);
	}
	
	

}
