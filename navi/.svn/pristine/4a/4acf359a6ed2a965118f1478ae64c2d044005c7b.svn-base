.chat-box .btn.close{
    float: none;
    background-color: transparent;
    opacity: 1;
}
.chat-box .btn.close .icon.left_arrow:hover,.chat-box .btn.close .icon.left_arrow:focus{
	  background-color: transparent;
}


/* ㅠㅠㅠ */
.font{
	color:black;
}
.flex-container {
    display: flex;
    align-items: center;
}

.radius-img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-right: 10px;
}

.me {
	padding: 0 20px;
}