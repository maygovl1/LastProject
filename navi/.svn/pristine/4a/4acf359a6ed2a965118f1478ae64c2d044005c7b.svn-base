@charset "utf-8";

* {
    font-family: 'NotoSansKR',sans-serif;
    line-height: 1.3;
    box-sizing: border-box!important
}

html,body {
    width: 100%;
  /*   height: 100%; */
    overflow-x: hidden;
    position: relative
}

em,i {
    font-style: normal
}

a {
    display: inline-block;
    text-decoration: none;
    color: #333;
    transition: .3s
}

a:hover,a:focus {
    font-weight: normal;
}

ul {
    padding-left: 0;
    margin: 0;
}

li {
    list-style: none
}

.skip,.sr-only {
    display: block;
    font-size: 0;
    clip: rect(0,0,0,0);
    margin: -1px;
    padding: 0;
    position: absolute
}



/* btn-custom */
.btn-custom {
    color: #fff;
    background-color: #5346DB;
    border-color: #5346DB
}

.btn-custom:hover,.btn-custom:focus,.btn-custom:active {
    /* background-color: #333840 !important; */
    /* border-color: #333840 !important; */
    color: #fff
}

/* common */
.user_info {
    width: calc(100% - 20%);
    padding-right: 100px;
}

.user_info > em {
    font-size: 20px;
    display: block;
    width: 100%;
}

.point_bg {
    background-color: #6D62E0;
}



.chat-conbox .icon {
    margin: 0;
}

.chat_top {
    border-radius: 20px;
    height: 106px;
    padding: 20px 30px;
    align-items: center;
}

.chat_middle {
    padding: 30px 0;
    position: relative;
    min-height: 500px;
}

.chat_bottom {
    padding: 0 !important;
}

.chat_bottom .ul {
    display: flex;
    align-items: center;
    /* justify-content: center; */
    height: 100px;
    text-align: center;
    border-top: 1px solid #ddd;
    padding: 10px 0;
}

.chat_bottom .li {
    display: inline-block;
    width: calc(100% / 4);
    height: 100%;
}

.chat_bottom .btn {
    display: inline-flex;
    height: 100%;
    width: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0;
}

.chat_bottom .icon {
    width: 30px;
    height: 30px;
    margin-bottom: 10px;
}

.chat_bottom .txt {
    color: #7C8080
}

.chat_in {
    border-radius: 20px;
    overflow: hidden;
}

.chat_in > div {
    display: block;
    width: 100%;
    color: #fff;
    /* min-height: 300px; */
}

.chat_tit {
    font-size: 30px;
    display: block;
    margin: 10px 0;
}

.chat_desc {
}

.chatPlus {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    position: absolute;
    right: 30px;
    bottom: 6%;
    border: none;
    background-color: #6D62E0;
    padding: 0;
    overflow: hidden;
}

.chatPlus .icon {
    height: 30px;
    width: 30px;
}

.chat_date {
    padding: 10px;
    color: #fff;
    padding: 10px 20px;
    border-radius: 20px;
    background-color: #9088E9;
    width: 100px;
    display: block;
    margin: 0 auto;
    text-align: center;
    margin-bottom: 20px;
}

.chat_date.yesterday, .chat_date.today {
    background-color: #5346DB;
}

.room-con .li {
    color: #888
}

.room-con .me,.room-con .tm {
    text-align: right;
}

.room-con .user {
    text-align: left;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.room-con .chat_text,.room-con .tm {
    display: block;
    margin: 10px 0;
}

.room-con .tm,.room-con .user_name {
    font-weight: bold;
}

.room-con .chat_text {
    width: 100%;
    padding-left: 70px;
}

/* seach */
.chat_search {
    background-color: #fff;
    border-radius: 40px;
    overflow: hidden;
    width: 100%;
    height: 45px;
    position: relative;
    margin: 11px auto;
}

.chat_search .navi,.chat_search .search_btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.chat_search .navi {
    color: #fff;
    font-family: "GmarketSans";
    /* padding: 8px; */
    font-weight: bold;
    border-radius: 50%;
    left: 7px;
    width: 32px;
    height: 32px;
    /* text-align: center; */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 4px 0 0;
}

.chat_search .search_input {
    width: 100%;
    height: 100%;
    padding-left: 15px;
    padding-top: 11px;
    padding-bottom: 11px;
}

.chat_search .search_btn {
    right: 0;
    height: 100%;
}

/* chatlist */
.chat_list {
    height: 400px;
    overflow-y: auto;
    overflow-x: hidden;
}

.chat_list::-webkit-scrollbar {
    width: 13px;
}

.chat_list::-webkit-scrollbar-track {
    background: #E3E3FA
}

.chat_list::-webkit-scrollbar-thumb {
    background: #6D62E0;
    display: block;
    border-radius: 7px;
}

.chat_list::-webkit-scrollbar-thumb:hover {
    background: rgba(0,0,0,0.5)
}

.chat_list .content {
    padding: 0 30px;
}

.chat_list .content .li {
    padding: 10px 0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    color: #888;
}

.chat_list .content .li:first-child {
    border-bottom: 1px solid #ddd;
    position: relative;
    z-index: 4;
}

.chat_list .content .li:not(:last-child) {
    border-bottom: 1px solid #ddd;
}

/* no_content */
.chat_list.nolist {
    display: flex;
    align-items: center;
    justify-content: center;
}

.no_content {
    text-align: center;
}

.no_content .icon {
    width: 80px;
    height: 80px;
    background-size: contain
}

.no_content em {
    font-size: 20px;
    color: #7C8080;
    display: block
}

/* img */
.chat_in .imgbox {
    width: 60px;
    height: 60px;
    position: relative;
    margin-right: 15px;
    min-width: 60px;
}

.chat_in .imgbox .img-in {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
}

.chat_in .imgbox img {
    display: block;
    width: auto;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

/* noimg */
.chat_in .imgbox .img-in.no-img {
    border-radius: 50%;
}

/* status */
.chat_status {
    left: 50%;
    /* width: 100%; */
    height: auto;
    /* max-width: 170px; */
    position: absolute;
    width: 170px;
    top: 35%;
}

.status_btn {
    width: 100%;
    height: 50px;
    background-color: transparent;
    border: none;
    padding-left: 15px;
}

.status_btn,.chat_status li {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    /* padding-left: 15px; */
}

.chat_status .icon {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-position-x: 7px;
}

.chat_status .ul {
    background-color: #fff;
    padding: 15px;
    border-radius: 15px;
    border: 1px solid #ddd;
    margin-top: -1px;
    ; opacity: 0;
    visibility: hidden;
    height: 0;
    transition: all 0.3s;
}

.chat_status li {
    cursor: pointer;
}

.chat_status li:not(:last-child) {
    padding-bottom: 10px;
}

.chat_status .txt {
    color: #7C8080;
    margin-left: 17px;
}

.status_btn.open {
}

.status_btn.open + .ul {
    opacity: 1;
    visibility: visible;
    height: auto;
}

/* roomleader */
.roomleader {
    display: flex;
    align-items: center;
    height: 100%;
    position: relative;
    width: 100%;
    max-width: 100%;
}

.fnc {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
}

.fnc * {
    display: inline-block
}

.fnc button {
    padding: 5px
}

.chat_in.chat_room {
    background-color: #E3E3FA;
}

.chat_in.chat_room > div {
    height: 100%;
    padding: 20px;
}

.chat_in.chat_room .chat_middle {
    overflow-y: auto;
}

.chat_in.chat_room .room-con {
    height: 100%;
}

/* pw */
.chat_pw {
    text-align: center;
}

.chat_pw .chat_top {
    height: 200px;
    padding: 40px 20px;
}

.chat_pw .chat_top {
    text-align: left;
}

.chat_pw .chat_middle {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

.chat_pw .chat_middle * {
    width: 100%;
}

.chat_pw .chat_middle > * {
    max-width: calc(100% - 160px);
    display: inline-block;
}

.chat_pw .chat_middle input[type="password"] {
    border: 0;
    border-bottom: 1px solid #ddd;
    height: 60px;
    margin-bottom: 30px;
    border-radius: 0;
}

.chat_pw .chat_middle .btn {
    border-radius: 30px;
    margin: 10px 0 0;
    padding: 20px 0;
}

/* 채팅방 채팅입력창*/
.chatInput {
    margin-top: 20px;
}

.fileInput {
    display: flex;
    position: relative;
    width: 100%;
    float: left;
}

.fileInput {
    margin: 10px 0;
}

.fileInput input {
    width: 80%;
    padding: 0 10px;
}

.fileInput input + button {
    width: 20%;
}

.btn_send {
}

.fileInput,.btn_send {
    height: 50px;
    width: 100%;
}

/* group */
.chat_in .imgbox.group .icon {
    width: 100%;
    height: 100%;
}

