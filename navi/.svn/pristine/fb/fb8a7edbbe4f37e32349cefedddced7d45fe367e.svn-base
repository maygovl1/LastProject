package kr.or.navi.board.form.service;

import java.util.List;

import javax.inject.Inject;

import org.springframework.stereotype.Service;

import kr.or.navi.board.form.dao.FormDAO;
import kr.or.navi.common.paging.PaginationInfo;
import kr.or.navi.vo.BoardPostVO;
import lombok.extern.slf4j.Slf4j;

@Service
@Slf4j
public class FormServiceImpl implements FormService {

	@Inject
	private FormDAO dao;
	
	
	@Override
	public List<BoardPostVO> retrieveFormList(PaginationInfo paging) {
		int totalRecord = dao.selectTotalRecord(paging);
		paging.setTotalRecord(totalRecord);
		return dao.selectFormList(paging);
	}

	@Override
	public BoardPostVO retrieveForm(String bpId) {
		return dao.selectForm(bpId);
	}

	@Override
	public int formModify(BoardPostVO form) {
		return dao.updateForm(form);
	}

	@Override
	public int deleteForm(String bpId) {
		return dao.deleteForm(bpId);
	}

	@Override
	public int modifyForm(BoardPostVO updateBp) {
		return dao.updateDetailForm(updateBp);
	}

	@Override
	public int createForm(BoardPostVO insertBp) {
		return dao.insertForm(insertBp);
	}
	
	@Override
	public int viewCnt(String bpId) {
		return dao.updateCnt(bpId);
	}

}
