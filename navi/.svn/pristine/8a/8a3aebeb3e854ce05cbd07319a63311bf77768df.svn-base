<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.navi.mapper.dao.EmpDAO">
	<resultMap id="empResultMap" type="EmpVO" autoMapping="true">
    <id property="empId" column="EMP_ID"/>
    <collection property="empRoles" ofType="string">
			<result column="ROLE_ID"/>
	</collection>
    <!-- TeamVO 리스트 매핑 -->
</resultMap>
	<select id="selectList" resultMap="empResultMap">
				SELECT
					    emp.emp_id,
					    emp.dept_id,
                        dept.dept_name,
				        emp.ps_id,
				        position.ps_name,
					    emp.role_id,
					    cn_id,
					    emp_img,
					    emp_name,
					    emp_age,
					    emp_gen,
					    emp_pass,
					    emp_rrno,
					    emp_phone,
					    emp_tel,
					    emp_zip,
					    emp_addr,
   				        emp_addr2,
					    emp_mail,
					    emp_cmp_ymd,
					    emp_career,
					    emp_quit_dt,
					    emp_limit_yn,
					    emp_bk_id,
					     emp_fm_id,
					    emp_cert_cg
					FROM
					    emp join team on emp.emp_id=team.emp_id  join dept on dept.dept_id = emp.dept_id
				        JOIN position ON position.ps_id = emp.ps_id	
				      WHERE EMP.EMP_ID= #{empId}
	</select>
	<select id="selectOne" resultMap="empResultMap" parameterType="string">
				SELECT
					    emp.emp_id,
					    emp.dept_id,
                        dept.dept_name,
				        emp.ps_id,
				        position.ps_name,
					    emp.role_id,
					    cn_id,
					    emp_img,
					    emp_name,
					    emp_age,
					    emp_gen,
					    emp_pass,
					    emp_rrno,
					    emp_phone,
					    emp_tel,
					    emp_zip,
					    emp_addr,
   				        emp_addr2,
					    emp_mail,
					    emp_cmp_ymd,
					    emp_career,
					    emp_quit_dt,
					    emp_limit_yn,
					    emp_bk_id,
					     emp_fm_id,
					    emp_cert_cg
					FROM
					    emp left join team on emp.emp_id=team.emp_id  
                        join dept on dept.dept_id = emp.dept_id
				        JOIN position ON position.ps_id = emp.ps_id	
				    WHERE EMP.EMP_ID=  #{empId}
	</select>
</mapper>