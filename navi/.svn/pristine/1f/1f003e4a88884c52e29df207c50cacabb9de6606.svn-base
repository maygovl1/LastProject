<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring"%>
<div class="parent-div d-flex justify-content-center">
	<div class="parent-div d-flex justify-content-center">
		<div class="p-2 flex-fill">
			<strong>일감 현재 현황</strong>
			<canvas id="taskChart"></canvas>
		</div>
		<div class="p-2 flex-fill">
			<strong>역할 분배 현황</strong>
			<canvas id="roleChart"></canvas>
		</div>

		<div class="p-2 flex-fill">
			<span class="h-70"> <!-- ui : table s --> <!-- ui : table s -->
				<strong>최신 이슈테이블</strong>
				<table class="table text-center">
					<caption class="sr-only">이슈 테이블</caption>

					<colgroup>
						<col style="width: 8%;">
						<col style="width: 8%;">
						<col style="width: 8%;">
						<col style="width: 8%;">
						<col style="width: 8%;">
						<col style="width: auto;">
						<col style="width: 8%;">
						<col style="width: 8%;">
						<col style="width: 8%;">

					</colgroup>

					<thead>
						<tr>
							<th scope="col"></th>
							<th scope="col">번호</th>
							<th scope="col">이슈 ID</th>
							<th scope="col">분류</th>
							<th scope="col">이슈명</th>
							<th scope="col">작성자</th>
							<th scope="col">첨부파일</th>
							<th scope="col">등록일</th>
							<th scope="col">중요도</th>
						</tr>
					</thead>
					<tbody>
						<c:forEach items="${issueList }" var="issue" begin="0" end="2">
							<!-- 1 -->
							<tr>
								<td>
									<button class="kinBtn border-0 bookMark"
										data-mark-id="${issue.issueId }">
										<i class="icon kin"></i><i class="sr-only">즐겨찾기버튼</i>
									</button>
								</td>
								<th scope="row">${issue.rnum }</th>
								<td>${issue.issueId }</td>
								<td><span class="category ordinary">${issue.impName}</span></td>
								<td><span class="category ordinary">${issue.stateName}</span></td>
								<td class="text-start"><a
									href="${pageContext.request.contextPath }/project/issue/detail/${proId }/${issue.issueId}"
									class="text-link d-flex new"> <span class="icon new_icon">
											<span class="sr-only">new</span>
									</span> <em class="text-elipsis">${issue.issueTitle}</em>
								</a></td>
								<td>${issue.empName }</td>
								<td><a href="" class="download_link" download=""><i
										class="icon hangle"></i><em class="sr-only">한글파일 다운로드</em></a></td>
								<td>${issue.issueRegDtStr}</td>
							</tr>
							<!-- 1 -->
						</c:forEach>
					</tbody>
				</table>
			</span>
		</div>
	</div>
	
</div>
<div class="parent-div d-flex justify-content-center h-50">
	<canvas id="ingChart"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const taskChart   = document.getElementById('taskChart');
  const roleChart   = document.getElementById('roleChart');
  const ingChart   = document.getElementById('ingChart');
  
  
  new Chart(ingChart, {
	  	type: 'line',
	    data: {
	    	 labels: ${chart.labels },
	    		  datasets: [{
	    			    label: 'My First Dataset',
	    			    data: [65, 59, 80],
	    			    fill: false,
	    			    borderColor: 'rgb(75, 192, 192)',
	    			    tension: 0.1
	    			  }]
	    },
	    options: {
	        responsive: true,
	        plugins: {
	          legend: {
	            position: 'top',
	          },
	          title: {
	            display: true,
	            text: 'Chart.js Line Chart'
	          }
	        }
	      }
	   
	  });  
  new Chart(taskChart, {
	  	type: 'doughnut',
	    data: {
	    	 labels: ${chart.labels },
	    		  datasets: [{
	    		    label: 'My First Dataset',
	    		    data: ${chart.data },
	    		    backgroundColor: [
	    		      'rgb(255, 99, 132)',
	    		      'rgb(54, 162, 235)',
	    		      'rgb(255, 205, 86)'
	    		    ],
	    		    hoverOffset: 4
	    		  }]
	    },
	    options: {
	      scales: {
	        y: {
	          beginAtZero: true
	        }
	      },
	      cutout:"50%"
	      ,radius:"80%"
	   
	    }
	  });
  new Chart(roleChart, {
	    type: 'doughnut',
	    data: {
	        labels: ${team.labels},
	        datasets: [{
	            label: 'My First Dataset',
	            data: ${team.data},
	            backgroundColor: [
	                'rgb(255, 99, 132)',
	                'rgb(54, 162, 235)',
	                'rgb(255, 205, 86)',
	                'rgb(75, 192, 192)',
	                'rgb(153, 102, 255)'
	                // 여기에 더 많은 색상을 추가할 수 있습니다.
	            ],
	            hoverOffset: 4
	        }]
	    },
	    options: {
	        scales: {
	            y: {
	                beginAtZero: true
	            }
	        },
	        cutout: "50%",
	        radius: "80%"
	    }
	});
</script>