package kr.or.navi.chat.web.service;

import java.util.List;

import javax.inject.Inject;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import kr.or.navi.chat.web.dao.ChatDAO;
import kr.or.navi.vo.ChatRoomVO;
import kr.or.navi.vo.ChatUserVO;
import kr.or.navi.vo.EmpVO;

@Service
public class ChatServiceImpl implements ChatService {
	
	@Inject
	private ChatDAO cdao;
	
	@Override
	public List<EmpVO> chatEmpList(String empId) {
		return cdao.selectChatEmpList(empId);
	}
	
    @Override
    public String createPrivateRoom(ChatRoomVO roomVO) {
    	
        // 새로운 1:1 채팅방 생성
        String roomId = cdao.createPrivateRoom(roomVO);
        // 생성된 채팅방에 대화 사용자 추가
        cdao.addChatUser(roomId, roomVO.getEmpId());
        return roomId;
    }

    @Override
    public int addChatUser(String roomId, String empId) {
        return cdao.addChatUser(roomId, empId);
    }

	@Override
	public List<ChatUserVO> chatList(String empId) {
		return cdao.selectChatList(empId);
	}
}
